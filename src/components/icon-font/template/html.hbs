<link href="../../../dist/css/app.css" rel="stylesheet">

<!-- Preview Container -->
<div id="fontPreviewContainer" style="padding: 30px 0;">

   <!-- Container -->
   <div data-max-columns="auto">
      {{#each names}}

         <!-- Item -->
         <div style="display: inline-block; margin: 10px;">

            <!-- Content -->
            <div style="text-align: center; font-size: 12px;">
               <div style="font-size: 22px; line-height: 1; margin-bottom: 5px;">
                  <span class="{{../classPrefix}}{{this}}"></span>
               </div>
               <div>{{this}}</div>
            </div>
         </div>
      {{/each}}
   </div>
</div>
